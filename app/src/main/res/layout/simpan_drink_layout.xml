<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <ImageView
        android:layout_width="68dp"
        android:layout_height="98dp"
        android:src="@drawable/ic_drink"
        app:tint="@color/blue_003"
        android:layout_marginTop="40dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drink Target"
        android:textSize="20sp"
        android:textColor="@color/blue_003"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingStart="78dp"
        android:paddingEnd="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/bg_card_30_outline_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="200"
            android:textSize="18sp"
            android:textColor="@color/blue_001"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ml"
            android:textSize="18sp"
            android:textColor="@color/blue_001"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="14dp"
        android:paddingBottom="14dp"
        android:paddingStart="78dp"
        android:paddingEnd="37dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="68dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/bg_card_30_outline_blue">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="18sp"
            android:textColor="@color/blue_003"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gelas"
            android:textSize="18sp"
            android:textColor="@color/blue_003"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSimpan"
        android:layout_width="140dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_1"
        android:backgroundTint="@color/blue_003"
        android:text="Simpan"
        android:textColor="@color/white"
        android:textAllCaps="false"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="32dp"/>



</LinearLayout>