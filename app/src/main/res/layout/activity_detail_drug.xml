<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailDrugActivity"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/sectTitle"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:background="@drawable/bg_bottom_nav"
            android:backgroundTint="@color/green_002"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="22dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                android:padding="22dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Deskripsi Obat"
                android:textSize="24sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
                android:textStyle="bold"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_love_outline"
            android:layout_below="@id/sectTitle"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="29dp"
            android:layout_marginEnd="32dp"/>

        <ImageView
            android:id="@+id/imgObat"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:background="@color/grey_001"
            android:layout_below="@id/sectTitle"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"/>

        <TextView
            android:id="@+id/tvObat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Obat"
            android:textSize="24dp"
            android:textStyle="bold"
            android:textColor="@color/blue_002"
            android:layout_marginTop="11dp"
            android:layout_below="@id/imgObat"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvHarga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:textSize="18dp"
            android:textColor="@color/blue_002"
            android:layout_marginTop="7dp"
            android:layout_below="@id/tvObat"
            android:layout_centerHorizontal="true"/>

        <TextView
            android:id="@+id/tvPerBox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Harga"
            android:textSize="12dp"
            android:textColor="@color/blue_002"
            android:layout_marginTop="5dp"
            android:layout_below="@id/tvHarga"
            android:layout_centerHorizontal="true"/>

        <LinearLayout
            android:id="@+id/sectIndikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/tvPerBox"
            android:layout_marginTop="32dp"
            android:layout_marginStart="38dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Indikasi Umum"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/blue_002"
                android:layout_marginTop="11dp"/>

            <TextView
                android:id="@+id/tvIndikasi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textSize="18dp"
                android:textColor="@color/blue_002"
                android:layout_marginTop="7dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sectKontra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/sectIndikasi"
            android:layout_marginTop="32dp"
            android:layout_marginStart="38dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kontra Indikasi"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/blue_002"
                android:layout_marginTop="11dp"/>

            <TextView
                android:id="@+id/tvKontra"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textSize="18dp"
                android:textColor="@color/blue_002"
                android:layout_marginTop="7dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/sectEfek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@id/sectKontra"
            android:layout_marginTop="32dp"
            android:layout_marginStart="38dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Efek Samping"
                android:textSize="24dp"
                android:textStyle="bold"
                android:textColor="@color/blue_002"
                android:layout_marginTop="11dp"/>

            <TextView
                android:id="@+id/tvEfek"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lorem_ipsum"
                android:textSize="18dp"
                android:textColor="@color/blue_002"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>

    </RelativeLayout>

</ScrollView>